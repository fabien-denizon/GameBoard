<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/main_search_game"
        android:text="@string/search_game"
        style="@style/textViewMenu"/>
    <TextView
        android:layout_width="match_parent"
        android:text="@string/new_game"
        android:id="@+id/main_new_game"
        style="@style/textViewMenu"/>
    <TextView
        android:layout_width="match_parent"
        android:text="@string/new_location"
        android:id="@+id/main_new_location"
        style="@style/textViewMenu"/>
    <TextView
        android:layout_width="match_parent"
        android:text="@string/import_export_database"
        android:id="@+id/main_import_export_database"
        style="@style/textViewMenu"/>


</LinearLayout>